<h1><%= @project.name %></h1><br>
<ul>
    <li>Objective: <%= @project.objective %></li>
    <li>Due by: <%= @project.due_date.strftime(" %b %e, %Y") %></li>
    <li>Priority #: <%= @project.priority %></li>
    <li>Complete <%= @project.complete %></li><br>
    <li>Category: <%= @project.user_projects.first.category %></li><br>
    <%= button_to "Edit Project", edit_project_path(@project), method: "get" %>
    <%= button_to "Delete Project", @project, method: "delete" %>
</ul>
<br>
<h2>Tasks in Progress Below</h2><br>
<% @project.tasks.not_done.each do |t| %>
    <li>Desc.: <%= t.name %></li>
    <li>Priority: <%= t.priority %></li>
    <li>Mins.: <%= t.turnaround_time %></li>
    <li><%= link_to "View", t %></li><br>
<% end %>
<%= button_to "View All Tasks for Project", project_tasks_path(@project), method: "get" %><br>
<%= button_to "Create New Task", new_project_task_path(@project), method: "get" %>