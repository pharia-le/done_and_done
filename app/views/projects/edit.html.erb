<%= form_with model: @project, local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :objective %>
    <%= f.text_area :objective %><br>
    
    <%= f.label :due_date %>
    <%= f.date_field :due_date %><br>

    Priority Scale<br>
    <%= f.label :priority, "Low" %>
    <%= f.radio_button :priority, "Low" %>

    <%= f.label :priority, "Medium" %>
    <%= f.radio_button :priority, "Medium" %>

    <%= f.label :priority, "High" %>
    <%= f.radio_button :priority, "High" %><br>

    <%= f.label :complete %>
    <%= f.check_box :complete %><br>

    <%= f.submit %>
<% end %>