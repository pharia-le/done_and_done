<%= form_with model: @task, local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, size: "100" %><br>

    Priority Scale<br>
    <%= f.label :priority, "Low" %>
    <%= f.radio_button :priority, "Low" %>

    <%= f.label :priority, "Medium" %>
    <%= f.radio_button :priority, "Medium" %>

    <%= f.label :priority, "High" %>
    <%= f.radio_button :priority, "High" %><br>

    <%= f.label :reminder %>
    <%= f.date_field :reminder %><br>

    <%= f.label :circumstance_ids, "Contexts" %><br>
    <%= f.collection_check_boxes :circumstance_ids, Circumstance.all, :id, :name %><br>
    
    <% if @task.persisted? %>
        <%= f.label :done %>
        <%= f.check_box :done %><br>
    <% else %>
        <%= f.hidden_field :project_id, value: @project.id %>
    <% end %>
    <%= f.submit %>
<% end %>
