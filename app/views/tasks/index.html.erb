<div class="row">
    <div class="col-4">
        <div class="list-group" id="list-tab" role="tablist">
            <a class="list-group-item list-group-item-action active" id="list-home-list" data-toggle="list" href="#list-home" role="tab" aria-controls="home">High</a>
            <a class="list-group-item list-group-item-action" id="list-profile-list" data-toggle="list" href="#list-profile" role="tab" aria-controls="profile">Medium</a>
            <a class="list-group-item list-group-item-action" id="list-messages-list" data-toggle="list" href="#list-messages" role="tab" aria-controls="messages">Low</a>
            <a class="list-group-item list-group-item-action" id="list-settings-list" data-toggle="list" href="#list-settings" role="tab" aria-controls="settings">Completed</a>
        </div>
    </div>
    <div class="col-8">
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="list-home" role="tabpanel" aria-labelledby="list-home-list">
                <div class="list-group">
                    <% if @high.any? %>
                        <% @high.each do |t| %>
                            <a class="list-group-item list-group-item-action list-group-item-light" <%= link_to t.name, project_task_path(t.project,t) %></a>
                        <% end %>
                    <% else %>
                        <p>No High Priority Tasks</p>
                    <% end %>
                </div>
            </div>
            <div class="tab-pane fade" id="list-profile" role="tabpanel" aria-labelledby="list-profile-list">
                <div class="list-group">
                    <% if @med.any? %>
                        <% @med.each do |t| %>
                            <a class="list-group-item list-group-item-action list-group-item-light" <%= link_to t.name, project_task_path(t.project,t) %></a>
                        <% end %>
                    <% else %>
                        <p>No Medium Priority Tasks</p>
                    <% end %>
                </div>  
            </div>
            <div class="tab-pane fade" id="list-messages" role="tabpanel" aria-labelledby="list-messages-list">
                <div class="list-group">
                    <% if @low.any? %>
                        <% @low.each do |t| %>
                            <a class="list-group-item list-group-item-action list-group-item-light" <%= link_to t.name, project_task_path(t.project,t) %></a>
                        <% end %>
                    <% else %>
                        <p>No Low Priority Tasks</p>
                    <% end %>
                </div>  
            </div>
            <div class="tab-pane fade" id="list-settings" role="tabpanel" aria-labelledby="list-settings-list">
                <div class="list-group">
                    <% if @done.any? %>
                        <% @done.each do |t| %>
                            <a class="list-group-item list-group-item-action list-group-item-light" <%= link_to t.name, project_task_path(t.project,t) %></a>
                        <% end %>
                    <% else %>
                        <p>No Completed Tasks</p>
                    <% end %>
                </div>  
            </div>
        </div>
    </div>
</div>