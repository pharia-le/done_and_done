<%= form_with model: @project.tasks.build, local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :priority %>
    <%= f.number_field :priority %><br>
    
    <%= f.label :turnaround_time, "Minutes to Complete" %>
    <%= f.number_field :turnaround_time, min: 1, max: 60 %>

    <%= f.hidden_field :project_id, value: @project.id %>
    <%= f.submit %>
<% end %>